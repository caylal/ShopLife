.goods{
  width: 32%; 
  background-color: #fff; 
  float: left;
  display: flex;
  flex-direction: column;
  margin-left:1%;
  margin-top: 15rpx;   
  /* border: 10rpx solid rgba(255, 255,255, 1) */
} 
 .goods .item-nav{
  display:flex;
  flex-direction:column;
}
.goods-img{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  padding-top: 10rpx;

}
.goods-title{
  height:100rpx; 
  width: 100%;
  padding: 10rpx;
  font-size:32rpx;
  white-space:pre-wrap;
  text-align: left;
  box-sizing: border-box;
}
.goods-buy{
  display:flex;  
  justify-content:space-between;
  font-size:32rpx;
  padding:0 5rpx 8rpx 5rpx;
  align-items:center;

}
.goods-price{
  font-size: 32rpx;
  flex: 1;
  font-weight: bold;
  color: #fc4104;
}
.goods-btn{
  font-size:54rpx;
  color:#fc4104;
}
.goods-mgr{
  margin-right: 10rpx;
}
.goods-mgl{
  margin-left: 10rpx;
}
.goods-num{
  font-size: 32rpx;  
  width:35%;
}
