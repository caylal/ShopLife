.goods-title .item-title{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
    
  align-items: center;
  padding-left: 20rpx; 
}
.item-title .item-text{
  font-size:36rpx;
  color: #fc4104;
  margin-left: 20rpx;
  font-weight:bold;
}
.goods-more{
  display: flex;
  align-items: center;
  font-size:32rpx;
  color: #8d8d8d;
  padding-right: 20rpx;
  padding-top:10rpx;
}
.goods-more span{
  font-size: 30rpx;
  margin-left: 5rpx; 

}
.goods-items{
  width: 100%;
  /* height: 340rpx;   */
  overflow-x: auto;
  white-space: nowrap;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
  background: #fff;
}
.goods{
  width: 32%;
  /* height: 320rpx; */
  display: inline-block;
  margin-left:1%;
  /* margin-top: 20rpx; */
}
.goods .item{
  width: 100%;
  height: 100%;
  /* background-color: #eee;   */
  display: flex;
  flex-direction: column;  
}
.item .item-nav{
  display:flex;
  flex-direction:column;
}
.goods-img{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  padding-top: 10rpx;

}
.goods-title{
  height:60rpx; 
  padding: 5rpx 5rpx 15rpx 5rpx;
  line-height:45rpx; 
  background: #fff;
  border-bottom: 1px solid #eee; 
 
}
.goods-name{
  width: 100%;
  /* overflow:hidden; */
  padding: 10rpx;
  font-size:32rpx;
  white-space:pre-wrap;
  /* text-overflow:ellipsis; */
  text-align:left;
  box-sizing:border-box;
  height:100rpx;

}
.goods-buy{
  display:flex;  
  justify-content:space-between;
  font-size:32rpx;
  padding:0 5rpx 8rpx 5rpx;
  align-items:center;

}
.goods-price{
  font-size: 32rpx;
  text-align:center; 
  font-weight: bold;
  color: #fc4104;
}
.goods-btn{
  font-size:54rpx;
  color:#fc4104; 
}
.goods-num{
  font-size: 32rpx;  
  width:35rpx;
  text-align: center;
}
