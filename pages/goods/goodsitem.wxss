.goods-category .category-title{
  height: 80rpx;
  width: 100%;
  position:relative; 
  background: #fff;
  text-align:center;
  font-size:38rpx; 
  border-bottom: 2px solid #76e3ee;
}
.category-title .title-tag{
  line-height: 80rpx;
}
.category-title .title-text{
  /* font-size: 35rpx; */
  text-align: center;
  width: 350rpx;
  height: 50rpx;
  border-radius: 50% / 100% 100% 0 0; 
  position:absolute;
  bottom:0;
  left: 50%;
  right: 50%;
  margin: -25rpx 0 0 -175rpx;
}
.title-text .text{
  color: #fff;
  position:relative;
  top:10rpx;
}
