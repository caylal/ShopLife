.goods-title .item-title{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
    
  align-items: center;
  padding-left: 20rpx; 
}
.item-title .item-text{
  font-size:30rpx;
  color: #fc4104;
  margin-left: 20rpx;
}
.goods-more{
  display: flex;
  align-items: center;
  font-size:28rpx;
  color: #8d8d8d;
  padding-right: 20rpx;
}
.goods-more span{
  font-size: 25rpx;
  margin-left: 5rpx;
}
.goods-items{
  width: 100%;
  height: 340rpx;  
  overflow-x: auto;
  white-space: nowrap;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
  background: #fff;
}
.goods{
  width: 32%;
  height: 320rpx;
  display: inline-block;
  margin-left:1%;
  /* margin-top: 20rpx; */
}
.goods .item{
  width: 100%;
  height: 100%;
  /* background-color: #eee;   */
  display: flex;
  flex-direction: column;  
}
.item .item-nav{
  display:flex;
  flex-direction:column;
}
.goods-img{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  padding-top: 10rpx;

}
.goods-title{
  height:50rpx; 
  padding: 5rpx 5rpx 15rpx 5rpx;  
  font-size:30rpx;
  line-height:45rpx; 
  background: #fff;
  border-bottom: 1px solid #eee; 
 
}
.goods-name{
  width: 100%;
  overflow:hidden;
  padding: 10rpx;
  font-size:28rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  text-align:center;
  box-sizing:border-box;
}
.goods-buy{
  display:flex;  
  justify-content:space-between;
  font-size:25rpx;
  padding:0 5rpx;
  align-items:center;

}
.goods-price{
  font-size: 30rpx;
  text-align:center;
  flex: 1;
  font-weight: bold;
  color: #fc4104;
}
.goods-btn{
  font-size:46rpx;
  color:#fc4104; 
}
.goods-num{
  font-size: 30rpx;  
 
}
.goods-opt{
  display: flex;
  align-items: center;
}