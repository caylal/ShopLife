.goods-category{
  margin-top: 15rpx; 
  /* background: #fff; */
}
.header + .goods-category{
  margin-top: 0;
}
.life-notice + .goods-category{
   margin-top: 10rpx;
}
.goods-category .category-title{
  height: 80rpx;
  width: 100%;
  position:relative; 
  background: #fff; 
}
.category-title .title-text{
  font-size: 35rpx;
  text-align: center;
  width: 350rpx;
  height: 50rpx;
  border-radius: 50% / 100% 100% 0 0; 
  position:absolute;
  bottom:0;
  left: 50%;
  right: 50%;
  margin: -25rpx 0 0 -175rpx;
}
.title-text .text{
  color: #fff;
  position:relative;
  top:10rpx;
}
