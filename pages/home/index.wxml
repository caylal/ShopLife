<!--index.wxml-->
<import src="../common/goodsitem"/>
<view class="container">
  
  <view class="banner">
      <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" circular="{{circular}}" vertical="{{vertical}}" indicator-color="rgba(255, 255, 255, .3)"         indicator-active-color="rgba(210, 34, 34, .7)" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
        <block wx:for="{{imagesUrl}}" wx:key="{{item}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image"/>
          </swiper-item>
        </block>        
      </swiper>
  </view>
  <view class="header">
    <view class="position">
      <icon class='iconfont icon-zuobiaofill'></icon>
      <text class="position-text">当前定位</text>
      <icon class='iconfont icon-xiajiantou'></icon>    
    </view>
    <view class="search" bindtap="Search">
      <icon class="search-icon" type="search" size="16" color='#fff'></icon>
      <input class="search-box" placeholder="搜索栏" placeholder-style='color: #eee' disabled="true"></input>
    </view>
    <view class="msg"></view>
  </view>

  <view class='life-notice'>
  
  </view>
   <template is="goods-category" data="{{category}}"> </template>
</view>
