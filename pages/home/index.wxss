/**index.wxss**/
@import "../common/goodsitem.wxss";
.header{ 
  display: flex;
  top: 0;
  width: 100%;
  height: 60rpx;
  font-size:30rpx; 
  padding: 5rpx;
  background-color: rgba(0,0,0,0.1);
  position: fixed; 
}
.header .search{
  width: 100%;
  border-radius: 5px;
  display: flex;
  background-color: rgba(0,0,0,0.1); 
}
.search .search-icon{
  position: relative;
  left: 10rpx;
  top: 15rpx;
  box-sizing: border-box;
 
}
.search .search-box{
  padding-left: 35rpx;
  
} 
.header .msg{
  width: 120rpx;  
}
.search-img{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 12rpx; 
  padding-left: 5rpx; 
}
.header .position{
  width:320rpx;
  height: 35rpx;
  display: flex;
  align-items: center;
}
.position-text{
  color: #ddd;  
  padding: 15rpx 5rpx 0 5rpx; 
}
.swiper_box{
  width: 100%;
  height: 280rpx;
}
.slide-image{
  width: 100%;  
  height: 100%;
}
.life-notice{
  height: 100rpx;
  width: 100%;
  border-bottom:1px solid #ddd; 
}

