.order-box{
  width: 100%;
  height: 100%;

}
.swiper-tab{
  position: fixed;
  top: 0;
  height: 80rpx;
  width: 100%;
  display: flex;
  font-size: 32rpx; 
  align-items: center;
  text-align: center;
  background-color: #eee;
  z-index: 2;
}
 .swiper-tab .tab-item{
  flex: 1;
  height: 100%;
  line-height:80rpx;  
} 
 .active{
  background-color: #fff;
  color: #fc4104;
} 

.order-section{
  margin-top: 80rpx;
  padding: 10rpx;
  background:#fff;
}
.order{
  display: flex;
  flex-direction: column;
  border: 1px solid #eee;
  margin-top:10rpx;

}
.order-top{
  padding: 10rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  /* color: #fc4104; */
  align-items: center;
  font-size: 32rpx;
  border-bottom:0.5px solid #dedede;
  background:#f4f4f4;
}
.order-top .order-status{
  display: flex;
  font-weight: bold;
  color: #fc4104;
}
.order-status .wait-pay{
  line-height:50rpx;
}
.order-status .go-pay{
  background:#fc4104;
  color:#fff;
  border-radius:10rpx;
  padding:5rpx 10rpx;  
}
.order-status .status-t{
  margin-left: 10rpx;
}
.order-no{
  padding: 15rpx 10rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.order-no .img{
  font-size: 62rpx;
  color:#fc4104;
}
.order-no .order-notice{
  position: relative; 
  background: #f4f4f4;
  -moz-border-radius: 12px;
  -webkit-border-radius: 12px;
  border-radius: 8rpx;
  line-height:70rpx;
  padding:0 15rpx;
  margin-left:30rpx;
  border:1rpx solid #dedede;

}
.order-no .order-notice:before{
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  right: 100%;
  top: 15rpx;
  border-width:18rpx; 
  border-style:solid; 
  border-color:transparent #dedede transparent transparent;
}
 .order-no .order-notice:after{
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  right: 100%;
  top: 16rpx;
  border-width:16rpx; 
  border-style:solid; 
  border-color:transparent #f4f4f4 transparent transparent;
} 
.order-goods{
  padding: 15rpx 0 5rpx 20rpx ;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.order-goods .goods-pic{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
}
.goods-pic .g-p{
  width: 90%;
  display: inline-block;
  white-space: nowrap;
  overflow-x: auto;
}

.goods-pic .g-more span{
  width: 10%;
  font-size: 52rpx;
  color: #dedede;
}
.goods-pic .g-pic{
  width: 120rpx;
  height: 120rpx;
  margin-left: 15%;
}
.g-p :first-child{
  margin-left: 0;
}
.order-goods .goods-count{
  width: 20%;
  font-size: 34rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
 
}
.goods-count .g-p{
  color: #fc4104;
  font-weight: 600;
}
.goods-count .g-n{
  font-size: 30rpx;
  letter-spacing: 5rpx; 
}
.order-null{
  text-align: center;
  padding-top:300rpx;
}
.order-null .icon-img{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto;
}  