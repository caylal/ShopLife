/* pages/category/index.wxss */
.c-nbhd{
  background: #fff;
  padding: 10rpx;
  box-sizing: border-box;
}
.nbhd-title{
  display: flex;
  justify-content: space-between;
}
.nbhd-title .n-name{
  font-weight: 600;
}
.nbhd-title .n-state{
  margin-right: 50rpx;
}
.n-state .r-btn{
  font-size:38rpx;
}
.nbhd-title .n-url{
  display: flex;
  align-items: center;
  color: #fc4104;
}
.n-url .p-btn{
  font-size: 45rpx;
  margin-right: 8rpx;
}
.n-url .j-btn{
  font-size: 30rpx;
  margin-left: 8rpx;
}
.nbhd-info{
  font-size: 30rpx;
  color: #8d8d8d;
}
.search{
  height: 100rpx;
  background: #fff;
  font-size: 30rpx;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
}
.search .form{
  height: 100%; 
  width: 100%;  
  position: relative;
  border-radius: 15rpx;
  background: rgba(0, 0, 0, .1)
}
.form .search-icon{
  position: absolute;
  right: 20rpx;
  top: 25%;
}
.form .s-input{
  padding: 0 20rpx;
}
.category{
  width: 100%;
  border-top: 1px solid #dedede;
  display: flex;
}
.category .nav-left{
  width: 30%;
  border-right: 1px solid #dedede;
  text-align: center;
}
.nav-left .nav-item{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #dedede;
  font-size:34rpx;
}
.nav-left .nav-child{
  background:#f9f9f9;
  border-bottom:1px solid #dedede;
  font-size:32rpx;
}
.nav-child .child-item{
  line-height: 80rpx;
}
.nav-child >.active{
  background: #fff;
  color:#d22222;
  font-size:34rpx;
}
.nav-list >.active{
  background: #fff; 
  font-size:36rpx;
  border-left: 8rpx solid #ab2b2b;
}
.category .nav-right{
  width: 70%;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #dedede;
}
.nav-right .good-item{
  display: flex;
  width: 100%;
  padding: 15rpx 5rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #dedede;
}
.good-item .good-pic{
  width: 120rpx;
  height: 120rpx;
}
.good-item .good-info{
  width: calc(100% - 120rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;  
  flex-direction: column;
  justify-content:space-between;
}
.good-info .good-title{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.good-info .good-title .title{
  width: 100%;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.good-info .good-bot{
  display:flex;
  justify-content:space-between;
  width:100%;

}
.good-bot .price{
  font-size: 34rpx;
  color: #fc4104;
  font-weight: bold;
  margin-top: 10rpx;
}
.good-bot .good-opt{
  width: 45%;
  display: flex;
  align-items: center;
}
.good-info .good-opt span{
  font-size: 54rpx;
  color: #fc4104;
}
.good-info .good-opt .good-num{
  flex-grow: 1;
  text-align: center;
}
.search-cart{
  height: 45px;
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0;
  right: 0;
  bottom: 0;
  background: #f4f4f4;
  border-top: 1rpx solid #d7d6dc; 
}
.cart-icon{
  font-size:60rpx;
  color: #fc4104;
}
.search-cart-info{
  display:flex;
  align-items:center;
  font-size: 36rpx;
  color: #fc4104;
  margin-left: 10rpx;
}
.cart-num{
  font-weight: bold;
}
.search-cart-btn{
  text-align: center;  
  width: 120px;
  height: 100%;
  background-color: #009900;
  line-height:45px;
  font-size:36rpx;
  color:#fff;
}