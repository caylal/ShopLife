  <view class="c-nbhd" wx:if="{{showNbhd}}">
    <view class="nbhd-title">
      <view class="n-name">{{nbhd.name}}</view>
      <view class="n-state" wx:if="{{nbhd.state == 1}}"><span class="iconfont icon-right r-btn"></span>已关注</view>
      <view class="n-url">
        <span class="iconfont icon-renqun p-btn"></span>
        <text>部落领地</text>
         <span class="iconfont icon-shuangjiantouyou j-btn"></span>
      </view>
      
    </view>
    <view class="nbhd-info">
      <view>营业时间：{{nbhd.time}}</view>
      <view>地址：{{nbhd.addr}}</view>
      <view>电话：{{nbhd.tel}}</view>
    </view>
  </view>
  <view class='category'>
    <!-- 左侧导航 -->
    <scroll-view class='nav-left' scroll-y="true">
      <view class="nav-item {{curId == item.id ? 'active' : ''}}" wx:for="{{navList}}" bindtap="switchRightTab" data-id='{{item.id}}'>{{item.name}}</view>
    </scroll-view>

    <!-- 右侧商品 -->
    <scroll-view class='nav-right' scroll-y="true">
      <view class="good-item">
        <image class="good-pic" src="../../images/orange.png"></image>
        <view class="good-info">
          <view class="good-title">
            <view class="title">华润五丰 美仑达三峡秭归伦晚脐橙 2.5kg装 精品果</view>
            <view class="price">￥20.5</view>
          </view>
          <view class="good-opt">
            <span class="iconfont icon-offline"></span>
            <text class='good-num'>1</text>
            <span class="iconfont icon-addition"></span>
          </view>
        </view>
      </view>
      <view class="good-item">
        <image class="good-pic" src="../../images/orange.png"></image>
        <view class="good-info">
          <view class="good-title">
            <view class="title">华润五丰 美仑达三峡秭归伦晚脐橙 2.5kg装 精品果</view>
            <view class="price">￥20.5</view>
          </view>
          <view class="good-opt">
            <span class="iconfont icon-offline"></span>
            <text class='good-num'>1</text>
            <span class="iconfont icon-addition"></span>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>

  <view class='search-cart'>
      <view class='search-cart-info'>
        <icon class='iconfont icon-gouwuchefill cart-icon' />
        <text class='cart-num'>￥50.0</text>
      </view>
      <view class='search-cart-btn'>
        <text> 去结算</text>
      </view>
    </view>
</view>
