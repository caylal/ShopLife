.goods{
  width: 32%;
  height: 320rpx;
  background-color: #eee;
  float: left;
  display: flex;
  flex-direction: column;
  margin-left:1%;
  margin-top: 15rpx;   
  /* border: 10rpx solid rgba(255, 255,255, 1) */
} 
 
.goods-img{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
  padding-top: 10rpx;

}
.goods-title{
  height:50rpx; 
  padding: 5rpx;
  overflow:hidden;
  font-size:30rpx;
  line-height:45rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.goods-buy{
  display:flex;  
  justify-content:space-between;
  font-size:25rpx;
  padding:0 5rpx;
  align-items:center;

}
.goods-price{
  font-size: 30rpx;
  flex: 1;
  font-weight: bold;
  color: #fc4104;
}
.goods-btn{
  font-size:46rpx;
  color:#fc4104;
  flex: 1;
  /* width:16px;
  height:16px;
  position:relative;
  top:-10rpx;
  vertical-align:top; */
}
.goods-mgr{
  margin-right: 10rpx;
}
.goods-mgl{
  margin-left: 10rpx;
}
.goods-num{
  font-size: 30rpx;  
  width:35%;
}
.goods-opt{
  display: flex;
  align-items: center;
}

