.user-box{
  width: 100%;
}
.user-box .user-info{
  background: #fff;
  padding: 15rpx;
}
.user-info .u-img{
  margin:0 auto;
  width:140rpx;
}
.user-info .u-img image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user-info .u-tel{
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
}
.u-mrg{
  margin-left: 20rpx;
}
.user-addr{
  margin-top: 10rpx;
  margin-bottom:80rpx;
}
.icon-edit{
  font-size: 50rpx;
}
.addr-box .addr-title{
  padding-left: 5rpx;
  line-height:60rpx;
  font-weight:bold;
  border:1rpx solid #dedede;
  background:#dedede;
}
.addr-box .addr-info{
  padding: 15rpx;
  background: #fff;
  margin-bottom: 5rpx;
}
.addr-info .addr-detail{
  line-height: 50rpx;
}
.addr-info .a-edit{
  display: flex;
  justify-content: space-between;
}
.user-box .add-addr{
  width: 100%;
  height: 90rpx;
  background: #390;
  position: fixed;
  bottom: 0;
  text-align: center;
  color: #fff;
  font-weight: 600;
}
.add-addr .btn-title{
  line-height: 90rpx;
}