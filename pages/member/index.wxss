.title{  
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #dedede;
}
.title .setting{
  height: 50rpx;
  padding-top: 5rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}
.setting .set{
 display: flex;
 margin-left: 20rpx; 
 color: #8d8d8d;
}
 .img{
  font-size:56rpx; 
} 
.set .setup{
 font-size:60rpx; 
}
.title .user{
  display: flex;
  padding: 0 20rpx 20rpx 30rpx; 
}
.user .user-pic{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user .user-name{
  width: calc(100% - 150rpx);
  padding: 10rpx;  
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user-name .s-all{ 
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 10rpx;
}
.user-name .name{
   font-size: 34rpx;
}
.user-name .adr{
   font-size: 32rpx;
}
.info{
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
}
.info .info-title{
  display: flex;
  padding: 15rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dedede;
}
.info-title .info-all{
  color: #8d8d8d;
  display: flex;
  align-items: center;
}
.info-all span{
  font-size: 32rpx;
  margin-left: 10rpx;
}
.info .info-content{
  width: 100%;
  display: flex;
  /* font-size: 28rpx; */
  padding:10rpx;
  box-sizing:border-box;

}
.info-content .store{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  margin-left:2.1%;
  padding: 20rpx 10rpx;
  box-sizing: border-box; 
  text-align: center;
}
.store .s-pic{
  width: 100rpx;
  height: 100rpx;
}
.store .s-title{
  margin-top: 5rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}